@using SchoolLand.Models.ViewModels
@model TeacherViewModel

<form asp-action="CreateHero">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label asp-for="NameTeacher" for="validationDefault01">Nombre</label>
      <input asp-for="NameTeacher" Lastname type="text" class="form-control" id="validationDefault01" placeholder="First name" value="Mark" required>
      <span asp-validation-for="NameTeacher"></span>
    </div>
    <div class="col-md-4 mb-3">
      <label asp-for="Age" for="validationDefault02">Edad</label>
      <input asp-for="Age"  type="text" class="form-control" id="validationDefault02" placeholder="Last name" value="Otto" required>
      <span asp-validation-for="Age"></span>
    </div>
    <div class="col-md-4 mb-3">
      <label asp-for="Carnet" for="validationDefaultUsername">Carnet</label>
      <div class="input-group">
        <div class="input-group-prepend">
        </div>
        <input asp-for="Carnet" type="text" class="form-control" id="validationDefaultUsername" placeholder="Username" aria-describedby="inputGroupPrepend2" required>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-3 mb-3">
      <label asp-for="Phone" for="validationDefault04">Telefono</label>
      <input asp-for="Phone" type="text" class="form-control" id="validationDefault04" placeholder="State" required>
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
      <label class="form-check-label" for="invalidCheck2">
        Agree to terms and conditions
      </label>
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Submit form</button>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}